<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="none"
    android:paddingBottom="20px"
    tools:context="app.okiimport.com.okiimport.fragmentos.FrgRegistrarRequerimiento">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/rectangle_head">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="20px"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Datos Personales"
                    android:textColor="@color/Blanco"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingLeft="10px"
                android:paddingRight="10px"
                android:layout_marginBottom="10px"
                android:padding="20px"
                android:background="@drawable/rectangle">

                <TextView
                    android:layout_width="103dp"
                    android:layout_height="match_parent"
                    android:text="Cedula/Rif *"
                    android:layout_gravity="left|top" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <Spinner
                        android:layout_width="50dp"
                        android:layout_height="fill_parent"
                        android:id="@+id/spnFRQTipoPersona" />

                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/txtFRQCedula"
                        android:layout_gravity="center"
                        android:textColor="@color/Negro"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre (s) *" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:inputType="textPersonName"
                    android:id="@+id/txtFRQNombre"
                    android:textColor="@color/Negro"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Apellido (s) *" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:inputType="textPersonName"
                    android:id="@+id/txtFRQApellido"
                    android:textColor="@color/Negro"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Telefono *" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:inputType="phone"
                    android:id="@+id/txtFRQTelefono"
                    android:textColor="@color/Negro"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estado *" />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/spnFRQEstado"
                    android:spinnerMode="dialog"
                    android:background="@android:drawable/btn_dropdown" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ciudad *" />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/spnFRQCiudad"
                    android:spinnerMode="dialog"
                    android:background="@android:drawable/btn_dropdown"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/rectangle_head">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Datos del Vehiculo"
                    android:textColor="@color/Blanco"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/rectangle"
                android:paddingLeft="10px"
                android:paddingRight="10px"
                android:padding="20px"
                android:layout_marginBottom="10px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Marca *" />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/spnFRQMarca"
                    android:spinnerMode="dialog"
                    android:background="@android:drawable/btn_dropdown"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Modelo *" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/txtFRQModelo"
                    android:textColor="@color/Negro"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AÃ±o *" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:inputType="date"
                    android:ems="10"
                    android:id="@+id/txtFRQAnno"
                    android:textColor="@color/Negro" />

                <view
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    class="librerias.componentes.ViewValidator"
                    android:id="@+id/vvFRQAnno" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Serial de Carroceria" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/txtFRQSerial"
                    android:textColor="@color/Negro"/>

            </LinearLayout>

            <GridLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="* Campos Obligatorios"
                    android:id="@+id/textView6"
                    android:textColor="@color/Rojo"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Siguiente"
                    android:id="@+id/btnFRQSiguiente"
                    android:layout_row="0"
                    android:layout_column="9"
                    style="@style/BaseButton"/>
            </GridLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        </LinearLayout>
    </RelativeLayout>
</ScrollView>
