<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="none"
    android:paddingBottom="20px"
    tools:context="app.okiimport.com.okiimport.fragmentos.FrgRegistrarRequerimiento"
    android:fillViewport="false">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

    <!-- TODO: Update blank fragment layout -->


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/rectangle_head">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Datos para la Busqueda"
                    android:textColor="@color/Blanco" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingLeft="10px"
                android:paddingRight="10px"
                android:layout_marginBottom="10px"
                android:padding="20px"
                android:background="@drawable/rectangle">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cedula/Rif *" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:id="@+id/spnFVQTipoPersona"
                        android:background="@android:drawable/btn_dropdown" />

                    <SearchView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/srchFVQCedula"
                        android:inputType="number" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/rectangle_head">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Mis Requerimientos"
                    android:textColor="@color/Blanco" />
            </LinearLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/rectangle"
                android:id="@+id/tblFVQRequerimientos"></TableLayout>
        </LinearLayout>

    </RelativeLayout>

</ScrollView>
