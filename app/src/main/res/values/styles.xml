<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/ColorPrimary</item>
        <item name="android:colorPrimaryDark">@color/ColorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/TextColorPrimary</item>
        <item name="android:icon">@drawable/ic_launcher</item>
        <item name="android:colorAccent">@color/accent_material_light</item>
    </style>

    <style name="BaseButton">
        <item name="android:background">@drawable/selector_button</item>
        <item name="android:textColor">@color/Blanco</item>
        <item name="android:padding">10px</item>
        <item name="android:layout_margin">10px</item>
    </style>

    <style name="BaseButton.Small" parent="android:Widget.Button.Small">
        <item name="android:background">@drawable/selector_button</item>
        <item name="android:textColor">@color/Blanco</item>
        <item name="android:layout_margin">10px</item>
    </style>
    <!--parent="Theme.AppCompat.Light.DarkActionBar"-->
</resources>
